{
  "name": "firestore-extended",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "emulators": "firebase emulators:start",
    "test": "firebase emulators:exec --project=firestore-extended \"ng test\"",
    "copy:readme": "cp ./README.md ./projects/firestore-extended",
    "copy:license": "cp ./LICENSE.md ./projects/firestore-extended",
    "doc": "npm run --prefix ./projects/firestore-extended/ doc",
    "build": "npm run build:lib && npm run build:demo && npm run doc",
    "build:lib": "npm run copy:readme && npm run copy:license && ng build --prod firestore-extended ",
    "build:demo": "ng build demo --base-href /demo/",
    "publish": "npm run publish:lib && publish:demo"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.1",
    "@angular/cdk": "^12.1.4",
    "@angular/common": "~12.0.1",
    "@angular/compiler": "~12.0.1",
    "@angular/core": "~12.0.1",
    "@angular/forms": "~12.0.1",
    "@angular/platform-browser": "~12.0.1",
    "@angular/platform-browser-dynamic": "~12.0.1",
    "@angular/router": "~12.0.1",
    "firebase": "^8.8.1",
    "rxfire": "^4.0.0",
    "rxjs": "^6.6.7",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.5",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "~12.0.1",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^1.0.0-rc.2",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.0",
    "source-map-explorer": "^2.5.2",
    "tslint": "^6.1.3",
    "typescript": "~4.2.3"
  }
}
